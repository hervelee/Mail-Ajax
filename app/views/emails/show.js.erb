$(document).ready(function() {

	let my_mail = $("<%= j (render 'layouts/email', email: @email) %>");

	
	$(".read").each(function() {
	  if ($(this).attr('value') == "true") {
	      $(this).css("background-color", "#FFF");
	  }; 
	});

	$('#object<%= @email.id %>').css("background-color", "#FFF");
	$('#object<%= @email.id %>').attr("value", "true");
	$('#<%= @email.id %>').css("background-color", "#FFF");
	$('#<%= @email.id %>').attr("value", "true");

	$('#render').html(my_mail);

});
 
